<p class="h4 mb-4 text-center">Все пользователи</p>

<table class = "table">
  <thead>
    <tr>
      <th>Имя пользователя</th>
      <th colspan="3">Действия</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Информация', user %></td>
        <td><%= link_to 'Изменить', edit_user_path(user) %></td>
        <td><%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class = 'text-center'>
  <%= link_to 'К программе', root_url , class: "text-primary"  %> |
  <%= link_to 'Выйти', session_logout_path, class: "text-primary"  %>
</div>
